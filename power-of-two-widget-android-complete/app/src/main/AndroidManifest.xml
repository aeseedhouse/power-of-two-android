<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poweroftwowidget">

    <application
        android:theme="@style/AppTheme"
        android:allowBackup="true"
        android:label="Power Number"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round">

        <!-- Daily Alarm Receiver -->
        <receiver android:name=".DailyUpdateReceiver" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".PowerOfTwoWidgetProvider" android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/power_of_two_widget_info" />
        </receiver>

    </application>

</manifest>
